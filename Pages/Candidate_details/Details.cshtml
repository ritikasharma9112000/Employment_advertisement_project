@page
@model Employment_advertisement_project.Pages.Candidate_Details.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<!--code to show the details from the table-->

<h1>Details</h1>

<div>
    <h4>Candidate_Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Name of candidate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate_Detail.Name_of_candidate)
        </dd>
        <dt class="col-sm-2">
           DOB of candidate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate_Detail.DOB_of_candidate)
        </dd>
        <dt class="col-sm-2">
           Mobile no of candidate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate_Detail.Mobile_no_of_candidate)
        </dd>
        <dt class="col-sm-2">
           Email address of candidate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate_Detail.Email_address_of_candidate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Candidate_Detail.Id">Edit</a> |
